<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:padding="10sp">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="SMART_FARM \n Saad FERID"
                android:textColor="@color/color_app"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30sp"
                android:src="@drawable/logo_isett" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Welcome Please sign up here"
                android:textColor="@color/color_app"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="25sp">


            <EditText
                android:id="@+id/user_name_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:drawableEnd="@drawable/ic_user"
                android:drawableTint="@color/color_app"
                android:hint="User Name"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/email_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/color_app"
                android:hint="exemple@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/cin_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:drawableEnd="@drawable/ic_cin"
                android:drawableTint="@color/color_app"
                android:hint="CIN:"
                android:inputType="text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/phone_number_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:drawableEnd="@drawable/ic_phone"
                android:drawableTint="@color/color_app"
                android:hint="Phone Number"
                android:inputType="text"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/password_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:drawableEnd="@drawable/baseline_123_24"
                android:drawableTint="@color/color_app"
                android:hint="password"
                android:inputType="textPassword"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/confirm_password_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:drawableEnd="@drawable/baseline_123_24"
                android:drawableTint="@color/color_app"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:textSize="14sp" />


            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:backgroundTint="@color/color_app"
                android:text="SIGN UP" />


            <TextView
                android:id="@+id/go_to_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:text="@string/have_auccount"
                android:textColor="@color/color_app"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>